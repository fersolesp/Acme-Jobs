<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="conversion-service.xml" />
	
	<!-- Shouts -->

	<bean id="shout01" class="acme.entities.shouts.Shout">
		<property name="author" value="John Doe"/>
		<property name="text" value="I'm happy!"/>
		<property name="moment" value="2019/09/09 10:00"/>
	</bean>

	<bean id="shout02" class="acme.entities.shouts.Shout">
		<property name="author" value="Jane Doe"/>
		<property name="text" value="I'm the master of my room!"/>
		<property name="moment" value="2019/08/09 15:55"/>
	</bean>
	
	<bean id="shout03" class="acme.entities.shouts.Shout">
		<property name="author" value="Foo Bar"/>
		<property name="text" value="Just turning 20!"/>
		<property name="moment" value="2019/09/07 00:00"/>
	</bean>
	
	<!-- CardenalBulletins -->

	<bean id="cardenalBulletin01" class="acme.entities.cardenalBulletins.CardenalBulletin">
		<property name="developer" value="Federico Costa"/>
		<property name="skills" value="Java"/>
		<property name="moment" value="2019/09/09 13:00"/>
	</bean>

	<bean id="cardenalBulletin02" class="acme.entities.cardenalBulletins.CardenalBulletin">
		<property name="developer" value="Josh Williams"/>
		<property name="skills" value="PL/SQL"/>
		<property name="moment" value="2019/06/09 15:55"/>
	</bean>
	
	<bean id="cardenalBulletin03" class="acme.entities.cardenalBulletins.CardenalBulletin">
		<property name="developer" value="Robert Wellis"/>
		<property name="skills" value="C++"/>
